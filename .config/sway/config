# Read `man 5 sway` for a complete reference.

include /etc/sway/config.d/*

# include config.d/variables
# set $font JetBrainsMono Nerd Font 10
set $wallpaper     "~/Dropbox/Wallpapers/anime-onepiece.jpg"
set $lockwallpaper "~/Dropbox/Wallpapers/anime-demonslayer.png"
set $fontsize 10
set $font Iosevka Nerd Font
# set $font JetBrainsMono Nerd Font
font pango: $font $fontsize
input "type:keyboard" {
    xkb_layout us,us,us
    xkb_variant ,dvp,workman-p
    xkb_options grp:ralt_rshift_toggle
    # xkb_options ctrl:nocaps,ctrl:lctrl_meta
    # use keyd, interception-caps2esc udevmon
}
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $term alacritty
# Your preferred application launcher
# set $menu dmenu_path | dmenu_run -fn "$font" | xargs swaymsg exec --
set $menu wmenu-run -f "$font $fontsize"

