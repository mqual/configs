# include config.d/output-input
# default_border pixel 3
default_border none
# default_floating_border pixel 3
gaps inner 10
# titlebar_padding 1
# titlebar_border_thickness 0
# SCREEN-SETTINGS
output "HDMI-A-3" disable
output "eDP-1" enable
# output "HDMI-A-3" transform 270
# output * transform 0
# output * bg "/home/vishal/Dropbox/Wallpapers/eDP-1/1.png" fill
output * bg $wallpaper fill
# tap to click
input 1267:12491:DELL09E1:00_04F3:30CB_Touchpad {
    dwt enabled
    tap enabled
    # natural_scroll enabled
    # scroll_method "none"
    middle_emulation enabled
}

include config.d/key-bindings

# include config.d/gestures
bindgesture swipe:right workspace prev
bindgesture swipe:left workspace next

# include config.d/bar
bar {
  id bar
  # colors {
  #     background $base00
  #     separator  $base01
  #     statusline $base04
  #     # State             Border  BG      Text
  #     focused_workspace   $base05 $base0D $base00
  #     active_workspace    $base05 $base03 $base00
  #     inactive_workspace  $base03 $base01 $base05
  #     urgent_workspace    $base08 $base08 $base00
  #     binding_mode        $base00 $base0A $base00
  # }
  position bottom
  status_command i3status-rs
}

# include config.d/autostart
# idle
exec swayidle -w \
    timeout 600 'swaylock -f -c 000000' \
    timeout 900 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
    before-sleep 'swaylock -f -c 000000'
# screen sharing
exec --no-startup-id /usr/lib/xdg-desktop-portal -r
# notification daemon
exec swaync
